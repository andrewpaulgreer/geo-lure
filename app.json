{
  "expo": {
    "name": "easyfish-app",
    "slug": "easyfish-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",


    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "this app uses the camera to posit images of job sites",
        "NSLocationWhenInUseUsageDescription": "this app uses locational data to track the location of the job sites where users are posting"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}

